{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 400,
  "height": 200,
  "title": {"text": "Mineral production in Afghanistan", "frame": "group"},
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/CalistaRSaw/3179-Data-Visualisation-2/main/Minerals%20data/Country%20raw%20mineral%20production.csv",
      "format": {"type": "csv", "parse": {"Year": "date"}, "delimiter": ","},
      "transform": [
        {
          "field": "Year",
          "type": "timeunit",
          "units": ["year"],
          "as": ["year_Year", "year_Year_end"]
        },
        {
          "type": "aggregate",
          "groupby": ["year_Year", "Mineral"],
          "ops": ["sum"],
          "fields": ["Count"],
          "as": ["sum_Count"]
        },
        {
          "type": "impute",
          "field": "sum_Count",
          "groupby": ["Mineral"],
          "key": "year_Year",
          "method": "value",
          "value": 0
        },
        {
          "type": "stack",
          "groupby": ["year_Year"],
          "field": "sum_Count",
          "sort": {"field": ["Mineral"], "order": ["descending"]},
          "as": ["sum_Count_start", "sum_Count_end"],
          "offset": "normalize"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "pathgroup",
      "type": "group",
      "from": {
        "facet": {
          "name": "faceted_path_main",
          "data": "source_0",
          "groupby": ["Mineral"]
        }
      },
      "encode": {
        "update": {
          "width": {"field": {"group": "width"}},
          "height": {"field": {"group": "height"}}
        }
      },
      "marks": [
        {
          "name": "marks",
          "type": "area",
          "style": ["area"],
          "sort": {"field": "datum[\"year_Year\"]"},
          "from": {"data": "faceted_path_main"},
          "encode": {
            "update": {
              "orient": {"value": "vertical"},
              "fill": {"scale": "color", "field": "Mineral"},
              "description": {
                "signal": "\"Year (year): \" + (timeFormat(datum[\"year_Year\"], '%Y')) + \"; Sum of Count: \" + (format(datum[\"sum_Count_end\"]-datum[\"sum_Count_start\"], \"\")) + \"; Mineral: \" + (isValid(datum[\"Mineral\"]) ? datum[\"Mineral\"] : \"\"+datum[\"Mineral\"])"
              },
              "x": {"scale": "x", "field": "year_Year"},
              "y": {"scale": "y", "field": "sum_Count_end"},
              "y2": {"scale": "y", "field": "sum_Count_start"},
              "defined": {
                "signal": "isValid(datum[\"year_Year\"]) && isFinite(+datum[\"year_Year\"]) && isValid(datum[\"sum_Count\"]) && isFinite(+datum[\"sum_Count\"])"
              }
            }
          }
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "domain": {"data": "source_0", "field": "year_Year"},
      "range": [0, {"signal": "width"}]
    },
    {
      "name": "y",
      "type": "linear",
      "domain": [0, 1],
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "source_0", "field": "Mineral", "sort": true},
      "range": {"scheme": "category20b"}
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Year (year)",
      "format": "%Y",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Sum of Count",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 0
    }
  ],
  "legends": [{"fill": "color", "symbolType": "circle", "title": "Mineral"}],
  "config": {}
}